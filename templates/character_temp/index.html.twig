{% extends 'base.html.twig' %}

{% block title %}Character index{% endblock %}

{% block body %}
    <h1>Character index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ki</th>
                <th>MaxKi</th>
                <th>Race</th>
                <th>Description</th>
                <th>Image</th>
                <th>Affiliation</th>
                <th>DeletedAt</th>
                <th>Gender</th>
                <th>Transformation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.name }}</td>
                <td>{{ character.ki }}</td>
                <td>{{ character.maxKi }}</td>
                <td>{{ character.race }}</td>
                <td>{{ character.description }}</td>
                <td>{{ character.image }}</td>
                <td>{{ character.affiliation }}</td>
                <td>{{ character.deletedAt }}</td>
                <td>{{ character.gender }}</td>
                <td>{{ character.transformation ? character.transformation|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_character_show', {'id': character.id}) }}">show</a>
                    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_character_new') }}">Create new</a>
{% endblock %}
