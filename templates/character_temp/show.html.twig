{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Ki</th>
                <td>{{ character.ki }}</td>
            </tr>
            <tr>
                <th>MaxKi</th>
                <td>{{ character.maxKi }}</td>
            </tr>
            <tr>
                <th>Race</th>
                <td>{{ character.race }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ character.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ character.image }}</td>
            </tr>
            <tr>
                <th>Affiliation</th>
                <td>{{ character.affiliation }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ character.deletedAt }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ character.gender }}</td>
            </tr>
            <tr>
                <th>Transformation</th>
                <td>{{ character.transformation ? character.transformation|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
