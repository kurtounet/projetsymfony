{% extends 'base.html.twig' %}

{% block title %}Liste des planètes{% endblock %}

{% block body %}
	<div class="flex justify-center flex-wrap m-5 gap-1">
		{% for planet in planets %}
			<div>
            {{ include('planets/card.html.twig', { planet: planet }) }}				 
			</div>
		{% else %}
			<div>Aucune planète n'a été trouvée</div>
		{% endfor %}
	</div>
{% endblock %}

