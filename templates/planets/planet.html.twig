{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
 {% if planet != null %}
    <div class="flex bg-gray-400 m-10 rounded-lg p-5" >
    <img class="object-scale-down rounded-lg " src="{{ planet.image }}" alt="{{ planet.name }}" 
    style="width: 300px; height: 500px;">
    <div class="mt-1 p-5">
        <h1 class="text-red-500 text-6xl text-center font-semibold m-1" > {{ planet.name }} </h1>  
        
        <p class="text-lg font-semibold m-1">Description : {{ planet.description }}</p>
        <p class="text-lg font-semibold m-1">Affiliation : {{ planet.is_destroyed }}</p>        
    </div>
</div>
{% else %}
<div class="flex justify-center bg-gray-200 m-2" >
        <p class="text-lg font-semibold">Ce personnage n'existe pas</p>        
</div>
 {% endif %}



{% endblock %}
