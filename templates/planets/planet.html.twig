{% extends 'base.html.twig' %}

{% block title %}Planète : {{ planet.name }}{% endblock %}

{% block body %}
<div class="container mx-auto mt-5">
    {% if planet != null %}
        <div class="bg-gray-100 shadow-lg rounded-lg p-6 flex flex-col items-center">
            <h1 class="text-4xl text-center font-bold text-gray-800 mb-4">{{ planet.name }}</h1>
            <img class="object-contain rounded-lg mb-4" src="{{ asset( '/uploads/planets/' ~ planet.image) }}" alt="{{ planet.name }}" style="width: 300px; height: 500px;">
            <p class="text-lg font-medium text-gray-700 mb-2">Description : {{ planet.description }}</p>
            <p class="text-lg font-medium text-gray-700">
                Détruite :
                {% if planet.isdestroyed == false %}
                    <span class="text-green-600">NON</span>
                {% else %}
                    <span class="text-red-600">OUI</span>
                {% endif %}
            </p>
        </div>
    {% else %}
        <div class="bg-red-100 text-red-700 p-4 rounded-lg shadow-md text-center">
            <p class="text-lg font-medium">Cette planète n'existe pas</p>
        </div>
    {% endif %}
</div>
{% endblock %}
